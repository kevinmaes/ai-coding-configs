{
  "allow": [
    "pnpm:*",
    "git add:*",
    "git commit:*",
    "git status:*",
    "git diff:*",
    "git checkout:*",
    "git fetch:*",
    "git pull:*",
    "npm run:*",
    "act:*",
    "gh pr create:*",
    "gh pr view:*",
    "gh run view:*",
    "mv:*",
    "cp:*",
    "mcp__ide__getDiagnostics"
  ],
  "deny": ["rm -rf /*", "sudo:*"],
  "ask": ["git push:*", "npm install:*", "pnpm add:*", "brew install:*"],
  "hooks": {
    "post-edit": ["pnpm format"]
  },
  "env": {
    "NODE_ENV": "development",
    "EDITOR": "code"
  }
}
