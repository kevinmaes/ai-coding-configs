{
  "allow": [
    "bun:*",
    "git add:*",
    "git commit:*",
    "git status:*",
    "git diff:*",
    "git checkout:*",
    "git fetch:*",
    "git pull:*",
    "npm run:*",
    "act:*",
    "gh pr create:*",
    "gh pr view:*",
    "gh run view:*",
    "mv:*",
    "cp:*",
    "mcp__ide__getDiagnostics"
  ],
  "deny": ["rm -rf /*", "sudo:*"],
  "ask": ["git push:*", "npm install:*", "bun add:*", "brew install:*"],
  "hooks": {
    "post-edit": {
      "command": "bun run format"
    }
  },
  "env": {
    "NODE_ENV": "development",
    "EDITOR": "code"
  },
  "alwaysThinkingEnabled": true,
  "statusLine": {
    "type": "command",
    "command": "/bin/bash ~/.claude/statusline.sh"
  }
}
